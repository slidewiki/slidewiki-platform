{
  "name": "slidewiki-platform",
  "description": "A Platform for Collaborative OpenCourseWare Authoring",
  "keywords": [
    "E-Learinng",
    "OpenCourseWare",
    "Presentations",
    "Authoring"
  ],
  "author": "Ali Khalili(http://ali1k.com)",
  "license": "MPL-2.0",
  "version": "2.0.0",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/slidewiki/slidewiki-platform"
  },
  "bugs": "https://github.com/slidewiki/slidewiki-platform/issues",
  "engines": {
    "node": "5.7.x"
  },
  "main": "start.js",
  "scripts": {
    "clean": "rm -rf build/ coverage/",
    "start": "node start.js",
    "build": "webpack --config webpack.config.production.js && NODE_ENV=production npm start",
    "dev": "node webpack-dev-server.js",
    "lint": "eslint ./**/*.js",
    "test": "mocha tests/unit/ --recursive --compilers js:babel/register --reporter spec",
    "coverage": "istanbul cover _mocha --include-all-sources tests/unit/*.js",
    "coverall": "npm run coverage && #cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "countLOC": "sloc -f cli-table -k total,source,comment,empty -e node_modules\\|coverage\\|.git ./",
    "countLOC:details": "sloc -f cli-table -d -e node_modules\\|coverage\\|.git ./",
    "start:watch": "nodemon"
  },
  "dependencies": {
    "async": "^1.5.2",
    "babel": "^5.8.23",
    "babel-core": "^5.8.25",
    "body-parser": "^1.15.0",
    "bower": "^1.7.9",
    "classnames": "^2.2.3",
    "compression": "^1.6.1",
    "cookie-parser": "^1.4.1",
    "csurf": "^1.8.3",
    "debug": "^2.2.0",
    "express": "^4.13.4",
    "express-state": "^1.3.0",
    "fluxible": "^1.1.0",
    "fluxible-addons-react": "^0.2.8",
    "fluxible-plugin-fetchr": "^0.3.9",
    "fluxible-router": "^0.4.14",
    "immutable": "^3.8.1",
    "lodash": "^4.11.1",
    "react": "^0.14.8",
    "react-custom-scrollbars": "^3.1.0",
    "react-dom": "^0.14.7",
    "react-hotkeys": "^0.7.1",
    "react-list": "^0.7.18",
    "request-promise": "^2.0.1",
    "serialize-javascript": "^1.2.0",
    "serve-favicon": "^2.3.0"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.8",
    "babel-loader": "^5.1.3",
    "bundle-loader": "^0.5.4",
    "chai": "^3.5.0",
    "coveralls": "^2.11.8",
    "eslint": "~2.2.0",
    "eslint-plugin-react": "^4.2.0",
    "fluxible-plugin-devtools": "^0.1.2",
    "istanbul": "^0.4.2",
    "jsdom": "^8.1.0",
    "json-loader": "^0.5.4",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.1",
    "react-hot-loader": "^1.3.0",
    "shelljs": "^0.6.0",
    "sloc": "^0.1.10",
    "webpack": "^1.12.4",
    "webpack-dev-server": "^1.14.1"
  }
}
