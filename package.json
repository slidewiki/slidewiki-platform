    "sloc": "0.1.10",
    "webpack": "1.13.2",
    "webpack-dashboard": "0.1.8",
    "webpack-dev-server": "1.15.1",
    "webpack-stats-plugin": "0.1.3",
    "webpack-vendor-chunk-plugin": "1.0.0",
    "webpack-visualizer-plugin": "0.1.5"
  }
}
