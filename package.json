{
  "name": "slidewiki-platform",
  "description": "A Platform for Collaborative OpenCourseWare Authoring",
  "keywords": [
    "E-Learinng",
    "OpenCourseWare",
    "Presentations",
    "Authoring"
  ],
  "author": "Ali Khalili(http://ali1k.com)",
  "license": "MPL-2.0",
  "version": "2.0.0",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/slidewiki/slidewiki-platform"
  },
  "bugs": "https://github.com/slidewiki/slidewiki-platform/issues",
  "engines": {
    "node": "5.7.x"
  },
  "main": "start.js",
  "scripts": {
    "clean": "rm -rf build/ coverage/",
    "start": "node start.js",
    "build": "webpack --config ./webpack/prod.config.js && NODE_ENV=production npm start",
    "build:nostart": "webpack --config ./webpack/prod.config.js",
    "dev": "bash ./gen_version.sh && node ./webpack/dev-server.js",
    "dev:windows": "node ./webpack/dev-server-windows.js",
    "lint": "eslint ./**/*.js",
    "test": "mocha test/unit/ --recursive --compilers js:babel-register --reporter spec",
    "coverage": "istanbul cover _mocha --include-all-sources tests/unit/*.js",
    "coverall": "npm run coverage && #cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "countLOC": "sloc -f cli-table -k total,source,comment,empty -e node_modules\\|coverage\\|.git\\|bower_components ./",
    "countLOC:details": "sloc -f cli-table -d -e node_modules\\|coverage\\|.git\\|bower_components ./",
    "start:watch": "nodemon",
    "validate": "npm ls",
    "pull": "git pull --recurse-submodules",
	  "windows": "webpack --config ./webpack/prod.config.js && set NODE_ENV=production && npm start"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "dependencies": {
    "async": "^2.0.1",
    "body-parser": "^1.15.2",
    "classnames": "^2.2.5",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "csurf": "^1.9.0",
    "debug": "^2.2.0",
    "express": "^4.14.0",
    "express-state": "^1.4.0",
    "fluxible": "^1.2.0",
    "fluxible-addons-react": "^0.2.8",
    "fluxible-plugin-fetchr": "^0.3.10",
    "fluxible-router": "^0.4.16",
    "immutable": "^3.8.1",
    "lodash": "^4.14.0",
    "react": "^15.2.1",
    "react-custom-scrollbars": "^4.0.0",
    "react-dom": "^15.2.1",
    "react-edit-inline": "^1.0.7",
    "react-hotkeys": "^0.9.0",
    "react-list": "^0.7.20",
    "request-promise": "^4.0.2",
    "reveal": "0.0.4",
    "serialize-javascript": "^1.3.0",
    "serve-favicon": "^2.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-syntax-decorators": "^6.8.0",
    "babel-plugin-transform-class-properties": "^6.11.5",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-register": "^6.9.0",
    "bower": "^1.7.9",
    "bundle-loader": "^0.5.4",
    "chai": "^3.5.0",
    "coveralls": "^2.11.11",
    "es6-promise": "^3.2.1",
    "eslint": "~3.1.1",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-react": "^5.2.2",
    "istanbul": "^0.4.4",
    "jsdom": "^9.4.1",
    "json-loader": "^0.5.4",
    "mocha": "^2.5.3",
    "nodemon": "^1.10.0",
    "pre-commit": "^1.1.3",
    "react-addons-test-utils": "^15.2.1",
    "react-hot-loader": "^1.3.0",
    "shelljs": "^0.7.0",
    "sloc": "^0.1.10",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1",
    "webpack-stats-plugin": "^0.1.1",
    "webpack-vendor-chunk-plugin": "^1.0.0",
    "webpack-visualizer-plugin": "^0.1.5"
  }
}
