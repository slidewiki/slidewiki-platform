{
  "name": "slidewiki-platform",
  "description": "A Platform for Collaborative OpenCourseWare Authoring",
  "keywords": [
    "E-Learinng",
    "OpenCourseWare",
    "Presentations",
    "Authoring"
  ],
  "author": "Ali Khalili(http://ali1k.com)",
  "license": "MPL-2.0",
  "version": "2.0.0",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/slidewiki/slidewiki-platform"
  },
  "bugs": "https://github.com/slidewiki/slidewiki-platform/issues",
  "engines": {
    "node": "5.7.x"
  },
  "main": "start.js",
  "scripts": {
    "clean": "rm -rf build/ coverage/",
    "start": "node start.js",
    "build": "webpack --config ./webpack/prod.config.js && NODE_ENV=production npm start",
    "build:windows": "webpack --config ./webpack/prod.config.js && set NODE_ENV=production && npm start",
    "build:nostart": "webpack --config ./webpack/prod.config.js",
    "dev": "node ./webpack/dev-server.js",
    "dev:dashboard": "DASHBOARD=1 webpack-dashboard -- webpack-dev-server --config ./webpack/dev-server.js",
    "dev:windows:dashboard": "set HOST=127.0.0.1 && set PORT=3000 && set DASHBOARD=1 && webpack-dashboard -- webpack-dev-server --config ./webpack/dev-server.js",
    "dev:windows": "set HOST=127.0.0.1 && set PORT=3000 && node ./webpack/dev-server.js",
    "lint": "eslint ./**/*.js",
    "test": "mocha test/unit/ --recursive --compilers js:babel-register --reporter spec",
    "coverage": "istanbul cover _mocha --include-all-sources tests/unit/*.js",
    "coverall": "npm run coverage && #cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "countLOC": "sloc -f cli-table -k total,source,comment,empty -e node_modules\\|coverage\\|.git\\|bower_components\\|custom_modules ./",
    "countLOC:details": "sloc -f cli-table -d -e node_modules\\|coverage\\|.git\\|bower_components\\|custom_modules ./",
    "start:watch": "nodemon",
    "validate": "npm ls",
    "pull": "git pull --recurse-submodules",
    "windows": "webpack --config ./webpack/prod.config.js && set NODE_ENV=production && npm start"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "async": "^2.0.1",
    "body-parser": "^1.15.2",
    "cheerio": "^0.22.0",
    "classnames": "^2.2.5",
    "compression": "^1.6.2",
    "cookie": "^0.3.1",
    "cookie-parser": "^1.4.3",
    "csurf": "^1.9.0",
    "debug": "^2.2.0",
    "express": "^4.14.0",
    "express-state": "^1.4.0",
    "filereader": "^0.10.3",
    "fluxible": "^1.2.0",
    "fluxible-addons-react": "^0.2.8",
    "fluxible-plugin-fetchr": "^0.3.11",
    "fluxible-router": "^0.4.16",
    "form-data": "^1.0.1",
    "fumble": "^0.1.2",
    "identicons-react": "^0.1.0",
    "immutable": "^3.8.1",
    "install": "^0.8.1",
    "iso-639-1": "^1.2.1",
    "js-cookie": "^2.1.2",
    "js-sha512": "^0.2.2",
    "lodash": "^4.15.0",
    "md5": "^2.2.1",
    "npm": "^3.10.7",
    "react": "^15.3.1",
    "react-custom-scrollbars": "^4.0.0",
    "react-dom": "^15.3.1",
    "react-dropzone": "^3.6.0",
    "react-edit-inline": "^1.0.7",
    "react-google-recaptcha": "^0.5.4",
    "react-hotkeys": "^0.9.0",
    "react-list": "^0.8.0",
    "react-modal": "^1.4.0",
    "react-resize-aware": "^1.0.11",
    "request": "^2.74.0",
    "request-promise": "^4.1.1",
    "serialize-javascript": "^1.3.0",
    "serve-favicon": "^2.3.0",
    "striptags": "^2.1.1",
    "superagent": "^2.0.0",
    "superagent-csrf": "^1.0.0",
    "superagent-csrf-middleware": "^0.3.0"
  },
  "devDependencies": {
    "babel-cli": "6.14.0",
    "babel-core": "6.14.0",
    "babel-eslint": "6.1.2",
    "babel-loader": "6.2.5",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-plugin-syntax-decorators": "6.13.0",
    "babel-plugin-transform-class-properties": "6.11.5",
    "babel-plugin-transform-object-rest-spread": "6.8.0",
    "babel-preset-es2015": "6.14.0",
    "babel-preset-react": "6.11.1",
    "babel-register": "6.14.0",
    "bower": "1.7.9",
    "bundle-loader": "0.5.4",
    "chai": "3.5.0",
